<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Reservations"
    android:orientation="vertical">

    <include layout="@layout/toolbar_reservations"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/booking_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/booking_data"/>
    
    <TextView
        android:id="@+id/no_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Bookings found!"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="28sp"
        android:layout_marginTop="50dp"/>


</LinearLayout>